    "version": "0.2.0",
    "configurations": [       
        {
            "name": "Node: Nodemon",
            "processId": "${command:PickProcess}",
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "restart": true,
            "protocol": "inspector",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/server.ts",
            "preLaunchTask": "npm: compile",
            "outFiles": ["${workspaceFolder}/dist/*.js"],
        }
    ]
}